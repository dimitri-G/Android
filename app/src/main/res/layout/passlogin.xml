<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:visibility="visible">

    <!-- 首先定义标题栏 -->
    <RelativeLayout
        android:id="@+id/biaoti"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#3399ff">

        <Button
            android:id="@+id/register"
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:background="#3399ff"
            android:drawablePadding="6dp"
            android:ellipsize="end"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="17dp"
            android:singleLine="true"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button_backward"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:drawablePadding="6dp"
            android:background="#3399ff"
            android:ellipsize="end"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/search"
            android:layout_width="146dp"
            android:layout_height="52dp"
            android:layout_alignBottom="@+id/button_backward"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="85dp"
            android:layout_marginBottom="-11dp"
            android:layout_toStartOf="@+id/button_forward"
            android:layout_toEndOf="@+id/button_backward"
            android:background="#3399ff"
            android:text="密码登录"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/nickname"
        android:layout_width="400dp"
        android:layout_height="49dp"
        android:layout_alignBottom="@+id/biaoti"
        android:layout_marginBottom="-52dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="@string/prompt_email1"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password"
        android:layout_width="400dp"
        android:layout_height="49dp"
        android:layout_alignBottom="@+id/nickname"
        android:layout_marginBottom="-52dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="@string/prompt_password1"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignBottom="@+id/password"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="-64dp"
        android:background="#32cd32"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="18dp" />

